{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prakalpa Navigator Input",
  "description": "Input schema for finding government schemes",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "age": {
      "title": "Age",
      "description": "Your age in years (0-120)",
      "type": "integer",
      "minimum": 0,
      "maximum": 120,
      "default": 30
    },
    "gender": {
      "title": "Gender",
      "description": "Select your gender",
      "type": "string",
      "enum": ["female", "male", "other"],
      "default": "female"
    },
    "income_annual": {
      "title": "Annual Income",
      "description": "Your annual income in rupees",
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "occupation": {
      "title": "Occupation",
      "description": "Your primary occupation",
      "type": "string",
      "enum": ["student", "unemployed", "farmer", "self-employed", "housewife", "other"],
      "default": "unemployed"
    },
    "caste": {
      "title": "Caste Category",
      "description": "Select your caste category",
      "type": "string",
      "enum": ["general", "sc", "st", "obc", "minority"],
      "default": "general"
    },
    "district": {
      "title": "District",
      "description": "Which district do you live in?",
      "type": "string",
      "default": "Kolkata"
    }
  },
  "required": ["age", "gender", "income_annual", "occupation", "caste", "district"]
}
